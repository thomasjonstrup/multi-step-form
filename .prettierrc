{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } },{
			"files": "*.css",
			"options": {
				"tabWidth": 4
			}
		},
		{
			"files": "*.json",
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}]
}
